---
// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORTS ASTRO ATOMS
import HeadingTwoWhiteCenter from "@/atoms/heading/two/white/center/index.astro"
import ContainPicture from "@/atoms/picture/contain/index.astro"

const {

    data,
    clients,
    CDN_LINK,
    PROJECT

} = Astro.props
---
<section class="bg-mc_black py-10 md:px-60">
    <Container>
        <HeadingTwoWhiteCenter>{ data.title }</HeadingTwoWhiteCenter>
        <section class="grid md:grid-cols-4 gap-x-4 gap-y-4 md:gap-y-10">
            {

                clients.map( ( value ) => {

                    return(
                        <div class="flex flex-col items-center gap-2">
                            <div class="h-20 w-full">
                                <ContainPicture
                                    src={ value.cover }
                                    alt=""
                                    IMAGE_WIDTH="200"
                                />
                            </div>
                            <p class="text-white text-sm text-center">{ value.tag }</p>
                            <div class="pt-4">
                                <p class="text-white text-sm font-merriweather font-light text-center leading-relaxed">{ value.description }</p>
                            </div>
                        </div>
                    )

                })

            }
        </section>
    </Container>
</section>
