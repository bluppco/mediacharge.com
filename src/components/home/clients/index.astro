---
// IMPORTS ASTRO LAYOUTS
import Container from "../../../layouts/Container.astro"

// IMPORTS ASTRO ATOMS
import HeadingTwoWhiteCenter from "../../../atoms/heading/two/white/center/index.astro"

// IMPORTS CONSTANTS
import { CDN_LINK, IMAGE_QUALITY } from "../../../constants/image"

const { data, clients } = Astro.props
---
<section class="bg-mc_black py-10 px-60">
    <Container>
        <HeadingTwoWhiteCenter>{ data.title }</HeadingTwoWhiteCenter>
        <section class="grid grid-cols-4 gap-x-4 gap-y-10">
            {

                clients.map( ( value ) => {

                    return(
                        <div class="flex flex-col items-center gap-2">
                            <div class="h-20 w-full">
                                <img
                                    src={ CDN_LINK + value.cover + "?quality=" + IMAGE_QUALITY }
                                    alt={ value.title }
                                    class="w-full h-full object-contain"
                                />
                            </div>
                            <p class="text-white text-sm text-center">{ value.tag }</p>
                            <div class="pt-4">
                                <p class="text-white text-sm font-merriweather font-light text-center leading-relaxed">{ value.description }</p>
                            </div>
                        </div>
                    )

                })

            }
        </section>
    </Container>
</section>
