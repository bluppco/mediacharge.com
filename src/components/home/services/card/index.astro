---
// IMPORTS ASTRO ATOMS
import ArrowButton from "@/atoms/button/arrow/index.astro"
import HeadingThree from "@/atoms/heading/three/index.astro"
import Link from "@/atoms/link/index.astro"
import Picture from "@/atoms/picture/index.astro"
import SmallParagraph from "@/atoms/paragraph/small/index.astro"

const {

    alt,
    button_link,
    button_text,
    CDN,
    description,
    icon_alt,
    icon_src,
    index,
    PROJECT,
    src,
    title

} = Astro.props
---
<div class={` ${ src ? "md:grid-cols-2 h-full" : "md:grid-cols-1 h-full" } grid rounded-lg border border-[#e0e6e8] bg-white overflow-hidden`}>
    <div class={` ${ src ? "justify-center" : "justify-between" } flex flex-col gap-6 p-4`}>
        <div class="flex flex-col gap-6">
            <div class="flex items-center gap-2">
                {

                    icon_src.map( ( value ) => {

                        return(
                            <div class="size-6">
                                <Picture
                                    alt={ icon_alt }
                                    CDN={ CDN }
                                    PROJECT={ PROJECT }
                                    src={ value.file }
                                />
                            </div>
                        )

                    })

                }
                <HeadingThree>{ title }</HeadingThree>
            </div>
            <SmallParagraph>{ description }</SmallParagraph>
        </div>
        <Link href={ button_link } aria_label="">
            <ArrowButton>{ button_text }</ArrowButton>
        </Link>
    </div>
    {

        src &&

        <div class="bg-zinc-200 w-full h-auto">
            <Picture
                alt={ alt }
                CDN={ CDN }
                image_width="720"
                PROJECT={ PROJECT }
                src={ src }
            />
        </div>

    }
</div>
