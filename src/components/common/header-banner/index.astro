---

// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

const { ENVIRONMENT } = Astro.props

---
{

    ENVIRONMENT === "staging" &&
    <section class="md:fixed z-50 top-0 w-full bg-gradient-to-r from-violet-200 to-pink-200 h-16 md:h-10">
        <Container>
            <div class="flex items-center justify-center h-full">
                <p class="text-xs md:text-sm text-center">This is staging environment created by <span class="underline underline-offset-4 font-semibold"><a href="https://blupp.co" target="_blank">Blupp Company</a></span> with some initial <span class="underline underline-offset-4 font-semibold"><a href="/benchmarking">benchmarking</a></span>. You can check the codebase on <span class="underline underline-offset-4 font-semibold"><a href="https://github.com/bluppco/mediacharge.com" target="_blank">Github</a></span>.</p>
            </div>
        </Container>
    </section>

}
