---
// IMPORTS CONSTANTS
import { CDN_LINK } from "../../constants/image"

const {

    alt,
    src

} = Astro.props
---
<picture class="w-full h-full">
    <source media="(max-width: 375px)" srcset={ CDN_LINK +  src + "?height=300&quality=80" } />
    <source media="(max-width: 640px)" srcset={ CDN_LINK +  src + "?height=400&quality=80" } />
    <img
        src={ CDN_LINK +  src + "?quality=80" }
        alt={ alt }
        class="w-full h-full object-cover"
    />
</picture>
