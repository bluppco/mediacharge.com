---

// RUNTIME
const runtime = Astro.locals.runtime
const {

    CDN,
    ENDPOINT,
    ENVIRONMENT,
    PROJECT

} = runtime.env
const data = await homeAPI( ENVIRONMENT, ENDPOINT )

// API
import { homeAPI } from "@/api/home"

const { home_data, services, meta, clients } = data

// IMPORTS ASTRO LAYOUTS
import Layout from "@/layouts/layout/index.astro"

// IMPORTS ASTRO COMPONENTS
import Home from "@/components/home/index.astro"

---
<Layout
    CDN={ CDN }
    description={ meta.description }
    image={ meta.cover }
    PROJECT={ PROJECT }
    title={ meta.title }
>
    <Home
        CDN={ CDN }
        clients={ clients }
        ENVIRONMENT={ ENVIRONMENT }
        home_data={ home_data }
        PROJECT={ PROJECT }
        services={ services }
    />
</Layout>
