---
// RUNTIME
const runtime = Astro.locals.runtime
const {

    CDN,
    ENDPOINT,
    PROJECT

} = runtime.env
const data = await homeAPI( runtime.env.ENVIRONMENT, ENDPOINT )

import { homeAPI } from "@/api/home"

const { home_data, services, meta, clients } = data

// IMPORTS ASTRO LAYOUTS
import Layout from "@/layouts/layout/index.astro"

// IMPORTS ASTRO COMPONENTS
import HeaderBanner from "@/components/common/header-banner/index.astro"
import Header from "@/components/common/header/index.jsx"
import Home from "@/components/home/index.astro"
import Footer from "@/components/common/footer/index.astro"
---
<Layout
    title={ meta.title }
    description={ meta.description }
    image={ meta.cover }
    CDN={ CDN }
    PROJECT={ PROJECT }
>
    <HeaderBanner />
    <Header client:load />
    <Home
        CDN={ CDN }
        clients={ clients }
        home_data={ home_data }
        PROJECT={ PROJECT }
        services={ services }
    />
    <Footer />
</Layout>
